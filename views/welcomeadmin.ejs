<%- include('./base/header.ejs') %>
    <nav class="navbar navbar-expand-lg text-light bg-dark">
  <div class="container">
    <a class="navbar-brand" href="#" style="color:white">RDEC</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link active" aria-current="page" href="/student/add/page">Add Student</a>
        <a class="nav-link" href="#">List Student</a>
        
      </div>
    </div>
  </div>
</nav>
 <div class="container">
        <div class = "alert text-center bg-primary my-3" style="color:white">
            <h4>Student List </h4>
        </div>

    </div >
    <div class = "container">
        <table class = "table text-center">
            <thead>
                <tr>
                    <th>Student Photo</th>
                    <th>Roll No</th>
                    <th>Name</th>
                    <th>Father's Name</th>
                    <th>Course </th>
                    <th> Branch</th>
                    <th>Year</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                <% students.forEach((student)=> {%>
                    <tr>
                        <td>
                            <img src="<%= student.studentImage %>" width="50px" height="50px"></img>
                        </td>
                        <td>
                            <%= student.rollNo%>
                        </td>
                        <td>
                            <%= student.name%>
                        </td>
                        <td>
                            <%= student.fatherName%>
                        </td>
                        <td>
                            <%= student.course%>
                        </td>
                        <td>
                            <%= student.branch%>
                        </td>
                        <td>
                            <%= student.yearOfAdmission %>
                        </td>                       
                        <td>
                            <a href="/edit/student/page/<%=student._id%>" class="btn btn-warning">Edit</a>
                            <!-- -->
                            <a href="/delete/student/<%= student._id %>" class="btn btn-danger" >Delete</a>
                        </td>
                    </tr>

                <%})%>
            </tbody>

    </div>

